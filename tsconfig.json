{
    "compilerOptions": {
        "strict": true,
        "target": "ES2017",
        "lib": ["dom", "esnext"],
        "types": ["node"],
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": false,
        "declaration": false,
        "outDir": "dist",
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,
    },
    "files": [
        "src/main.ts"
    ],
}